    {
      "parameters": {
        "jsCode": "// Wrap list response under langdockList to avoid clobbering document fields\nreturn items.map(item => ({ json: { langdockList: item.json } }));"
      },
      "id": "wrap_langdock_list",
      "name": "Wrap Langdock List",
      "position": [
        2176,
        544
      ],
      "type": "n8n-nodes-base.code",
      "typeVersion": 2
    },
    {
      "parameters": {
        "jsCode": "// Input 1: documents from Markdown to Binary (with fileName, binary)\n// Input 2: Langdock list from Wrap Langdock List (with langdockList.result array)\n\nconst documents = $('Markdown to Binary').all();\nconst langdockData = $('Wrap Langdock List').first();\nconst langdockList = langdockData?.json?.langdockList?.result || [];\n\n// Build a Map of existing files by name for fast lookup\nconst existingFilesMap = new Map();\nif (Array.isArray(langdockList)) {\n  langdockList.forEach(entry => {\n    const name = entry.name; // Use 'name' field from Langdock\n    if (name) {\n      existingFilesMap.set(name, entry);\n    }\n  });\n}\n\nreturn documents.map(doc => {\n  const fileName = doc.json.fileName; // Compare with 'fileName' from documents\n  const match = existingFilesMap.get(fileName);\n  const existsInLangdock = !!match;\n  const attachmentId = match?.id || null;\n\n  return {\n    json: {\n      ...doc.json,\n      // Enriched comparison fields\n      existsInLangdock,      // boolean: true if file already exists\n      attachmentId,           // string|null: attachment ID if exists\n      isNew: !existsInLangdock, // boolean: true if needs upload\n      langdockMatch: match || null // full match object for reference\n    },\n    binary: doc.binary\n  };\n});"
      },
