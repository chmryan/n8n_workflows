    {
      "parameters": {
        "jsCode": "// Prepare Langdock metadata and filename (matches Nextcloud naming)\nreturn items.map(item => {\n  const json = item.json || {};\n  const sourceUrl = json.metadata?.sourceURL || '';\n  let slug = sourceUrl.replace('https://iosys.swiss', '').replace(/\\//g, '_');\n  if (!slug) slug = 'homepage';\n  const fileName = `${slug}.md`;\n\n  return {\n    json: {\n      ...json,\n      knowledgeFolderId: '2fb738ae-93b1-4a0c-814a-fa38bd052629',\n      fileName,\n      sourceUrl,\n    },\n    binary: item.binary,\n  };\n});"
      },
      "id": "prepare_langdock",
      "name": "Prepare Langdock",
      "position": [
        1504,
        544
      ],
      "type": "n8n-nodes-base.code",
      "typeVersion": 2
    },
    {
      "parameters": {
        "jsCode": "// Convert markdown text to base64 binary for multipart upload\nreturn items.map(item => {\n  const { fileName, markdown } = item.json;\n  const b64 = Buffer.from(markdown || '', 'utf8').toString('base64');\n  item.binary = item.binary || {};\n  item.binary.file = {\n    data: b64,\n    mimeType: 'text/markdown',\n    fileName: fileName || 'document.md',\n  };\n  return item;\n});"
      },
      "id": "markdown_to_binary",
      "name": "Markdown to Binary",
      "position": [
